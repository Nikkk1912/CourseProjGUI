<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="200.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.courseprojgui.fxControllers.MainWindow">
   <children>
      <TabPane prefHeight="698.0" prefWidth="979.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="Shop">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="554.0" prefWidth="819.0" />
            </content>
          </Tab>
          <Tab text="Users">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
            </content>
          </Tab>
            <Tab text="Products">
              <content>
                <AnchorPane blendMode="SRC_ATOP" minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <ListView fx:id="productAdminList" blendMode="OVERLAY" layoutX="14.0" layoutY="14.0" onMouseClicked="#loadProductData" prefHeight="617.0" prefWidth="204.0" />
                         <Button layoutX="394.0" layoutY="603.0" mnemonicParsing="false" onAction="#createRecord" prefHeight="30.0" prefWidth="75.0" text="Add" />
                         <Button layoutX="524.0" layoutY="603.0" mnemonicParsing="false" onAction="#updateRecord" prefHeight="30.0" prefWidth="75.0" text="Update" />
                         <Button layoutX="654.0" layoutY="603.0" mnemonicParsing="false" onAction="#deleteRecord" prefHeight="30.0" prefWidth="75.0" text="Delete" />
                        <TextField fx:id="productTitleField" layoutX="230.0" layoutY="126.0" prefHeight="30.0" prefWidth="200.0" promptText="Title" />
                        <TextArea fx:id="productDescriptionField" blendMode="DARKEN" layoutX="229.0" layoutY="402.0" prefHeight="167.0" prefWidth="663.0" promptText="Description" />
                        <TextField fx:id="productQuantityField" layoutX="460.0" layoutY="126.0" prefHeight="30.0" prefWidth="200.0" promptText="Quantity" />
                        <TextField fx:id="productPriceField" layoutX="690.0" layoutY="126.0" prefHeight="30.0" prefWidth="200.0" promptText="Price" />
                        <RadioButton fx:id="productBodyKitRadio" layoutX="500.0" layoutY="54.0" mnemonicParsing="false" onAction="#disableFields" prefHeight="30.0" prefWidth="200.0" text="Body kit">
                           <font>
                              <Font size="14.0" />
                           </font>
                            <toggleGroup>
                                <ToggleGroup fx:id="productType" />
                            </toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="productWheelsRadio" layoutX="730.0" layoutY="54.0" mnemonicParsing="false" onAction="#disableFields" prefHeight="30.0" prefWidth="200.0" text="Wheels" toggleGroup="$productType">
                           <font>
                              <Font size="14.0" />
                           </font></RadioButton>
                        <RadioButton fx:id="productSpoilerRadio" layoutX="270.0" layoutY="54.0" mnemonicParsing="false" onAction="#disableFields" prefHeight="30.0" prefWidth="200.0" text="Spoiler" toggleGroup="$productType">
                           <font>
                              <Font size="14.0" />
                           </font></RadioButton>
                        <TextField fx:id="productBrandField" layoutX="230.0" layoutY="186.0" prefHeight="30.0" prefWidth="200.0" promptText="Brand" />
                        <TextField fx:id="productCompatibleCarsField" layoutX="460.0" layoutY="186.0" prefHeight="30.0" prefWidth="200.0" promptText="Compatible Cars" />
                        <TextField fx:id="productCountryManufacturerField" layoutX="690.0" layoutY="186.0" prefHeight="30.0" prefWidth="200.0" promptText="Country manufacturer" />
                        <ComboBox fx:id="productKitTypeComboBox" layoutX="330.0" layoutY="307.0" prefWidth="200.0" promptText="Kit type" />
                        <TextField fx:id="productMaterialField" layoutX="230.0" layoutY="246.0" prefHeight="30.0" prefWidth="200.0" promptText="Material" />
                        <TextField fx:id="productWeightField" layoutX="460.0" layoutY="246.0" prefHeight="30.0" prefWidth="200.0" promptText="Weight" />
                        <TextField fx:id="productColorField" layoutX="690.0" layoutY="246.0" prefHeight="30.0" prefWidth="200.0" promptText="Color" />
                        <TextField fx:id="productWheelSizeField" layoutX="560.0" layoutY="305.0" prefHeight="30.0" prefWidth="200.0" promptText="Wheel size" />
                        <Button layoutX="264.0" layoutY="603.0" mnemonicParsing="false" onAction="#clearAllFields" prefHeight="30.0" prefWidth="75.0" text="Clear" />
                     </children>
                  </AnchorPane>
              </content>
            </Tab>
            <Tab text="Warehouses">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
              </content>
            </Tab>
        </tabs>
      </TabPane>
   </children>
</AnchorPane>
